{
  "name": "Chunk Recall Trainer",
  "build": {
    "dockerfile": "Dockerfile.dev"
  },
  "containerEnv": {
    "PYTHONPATH": "/workspaces/ChunkRecallTrainer",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
    "LANGSMITH_API_KEY": "${localEnv:LANGSMITH_API_KEY}",
    "LANGSMITH_ENDPOINT": "${localEnv:LANGSMITH_ENDPOINT}",
    "LANGSMITH_PROJECT": "${localEnv:LANGSMITH_PROJECT}",
    "LANGSMITH_TRACING": "${localEnv:LANGSMITH_TRACING}",
    "FIREBASE_API_KEY": "${localEnv:FIREBASE_API_KEY}",
    "FIREBASE_AUTH_DOMAIN": "${localEnv:FIREBASE_AUTH_DOMAIN}",
    "FIREBASE_MEASUREMENT_ID": "${localEnv:FIREBASE_MEASUREMENT_ID}",
    "ALLOWED_EMAILS": "${localEnv:ALLOWED_EMAILS}"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "python.pythonPath": "/workspaces/ChunkRecallTrainer/.venv/bin/python",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "uv venv && . .venv/bin/activate && uv pip install -r requirements.txt && git config --global init.defaultBranch main && git config --global --add safe.directory ${containerWorkspaceFolder} && streamlit run src/chunk_recall_trainer/main.py --browser.gatherUsageStats false",
  "remoteUser": "vscode"
}